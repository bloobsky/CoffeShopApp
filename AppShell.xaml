<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CoffeShopApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CoffeShopApp"
    xmlns:views="clr-namespace:CoffeShopApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="Tabs">
        <Tab Title="Home" Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Menu" Icon="menu.svg">
            <ShellContent ContentTemplate="{DataTemplate views:Menu}"/>
        </Tab>
        <Tab Title="Cart" Icon="cart.svg">
            <ShellContent ContentTemplate="{DataTemplate views:Cart}"/>
        </Tab>
        <Tab Title="About" Icon="info.svg">
            <ShellContent ContentTemplate="{DataTemplate views:About}"/>
        </Tab>
    </TabBar>

</Shell>
