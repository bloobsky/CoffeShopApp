<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeShopApp.MainPage"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="20">

            <Image
                Source="logo.png"
                SemanticProperties.Description="Eco Cafteria"
                HorizontalOptions="Center"/>

            <Label
                Text="Welcome to Eco Cafeteria"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>

            <Label
                Text="Use the tabar for menu, cart and make sure you check about us page."
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
