<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeShopApp.Views.About"
             Title="About">
    <VerticalStackLayout
            Spacing="20"
            Padding="20">

        <Image
                Source="logo.png"
                SemanticProperties.Description="Eco Cafteria"
                HeightRequest="200"
                HorizontalOptions="Center" />

        <Label
                Text="Since opening in 1996 Eco Cafteria has become famous for its great food and friendly staff. An exciting menu of new food ideas from around the world, all prepared with the finest local ingredients. Homemade desserts and freshly roasted coffee."
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />

        <Label
                Text="Click here to compliement us, our daily hundred is fifty."
                SemanticProperties.HeadingLevel="Level3"
                FontSize="14"
                HorizontalOptions="Center" />
